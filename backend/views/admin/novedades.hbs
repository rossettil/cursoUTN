<div class="container" style="margin-top: 50px;">
    <div class="row">
        <p class="text-end">
            Hola {{usuario}}! <a href="/admin/login/logout" class="btn btn-danger">Cerrar sesi√≥n <i class="fas fa-sign-out-alt"></i></a>
        </p>
    </div>
    <div class="row">
        <div class="col-7">
            <h3>Listado de novedades</h3>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-primary" href="/admin/novedades/agregar"><i class="fa fa-plus" aria-hidden="true"></i> Nuevo</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Imagen</th>
                        <th scope="col">Titulo</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{{imagen}}}</td>
                        <td>{{titulo}}<br><br>{{subtitulo}}</td>
                        <td class="text-center">
                            <a class="btn btn-secondary" href="/admin/novedades/modificar/{{id}}"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                            <a class="btn btn-secondary" href="/admin/novedades/eliminar/{{id}}"><i class="fa fa-trash" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <br><br>
        </div>
    </div>
</div>